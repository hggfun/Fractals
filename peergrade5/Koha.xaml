<Window x:Class="peergrade5.Koha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:peergrade5"
        mc:Ignorable="d"
        Title="Koha/Serpinskiy" Height="450" Width="800">
    <Grid>
        <Label Content="Выберите глубину рекурсии:" HorizontalAlignment="Left" Margin="219,157,0,0" VerticalAlignment="Top" Width="200"/>
        <Slider x:Name="OrderNum" HorizontalAlignment="Left" Margin="219,188,0,0" VerticalAlignment="Top" Width="280" Minimum="1" Maximum="7" IsSnapToTickEnabled="True" TickFrequency="1"/>
        <TextBox HorizontalAlignment="Left" Margin="419,165,0,0" Text="{Binding ElementName=OrderNum, Path=Value}" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="335,275,0,0" VerticalAlignment="Top" Height="33" Width="65" Click="Button_Click"/>

    </Grid>
</Window>
